{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@brickd/canvas": [
        "packages/canvas/src/index"
      ],
      "@brickd/canvas/*": [
        "packages/canvas/src/*"
      ],
      "@brickd/core": [
        "packages/core/src/index"
      ],
      "@brickd/core/*": [
        "packages/core/src/*"
      ],
      "@brickd/components": [
        "packages/components/src/index"
      ],
      "@brickd/components/*": [
        "packages/components/src/*"
      ],
      "@brickd/render": [
        "packages/render/src/index"
      ],
      "@brickd/render/*": [
        "packages/render/src/*"
      ],
      "@brickd/utils": [
        "packages/utils/src/index"
      ],
      "@brickd/utils/*": [
        "packages/utils/src/*"
      ]
    }
  },
  "exclude": [
    "**/node_modules/**",
    "**/lib/**",
    "node_modules"
  ]
}
